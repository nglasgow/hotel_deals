<%= form_tag hotel_deals_path, :method => 'get' do %>
  <div class="search-form">
    <div class="row">
      <div class="span3">
        <div>
          <%= label_tag "City" %>
          <%= text_field_tag :city %>
        </div>
        <div>
          <%= label_tag "Province Code" %>
          <%= text_field_tag :province %>
        </div>
      </div>
      <div class="span3">
        <div>
          <%= label_tag "Country Code" %>
          <%= text_field_tag :country_code %>
        </div>
        <div>
          <%= label_tag "Max total for all nights on special" %>
          <%= text_field_tag :max_rate %>
        </div>
      </div>
      <div class="span3">
        <div>
          <%= label_tag "Minimum * rating" %>
          <%= text_field_tag :minimum_stars %>
        </div>
        <div>
          <%= label_tag "All inclusive?" %>
          <%= radio_button_tag :all_inclusive, true %>
        </div>
      </div>
      <div class="span3">
        <div>
          <%= label_tag "Date Range (yyyy/mm/dd)" %>
          <%= text_field_tag :from_date %>
          <%= text_field_tag :to_date %>
        </div>
      </div>
    </div>
    <div>
      <%= submit_tag "Search Hotel Specials", :name => nil %>&nbsp;&nbsp;
      <%= link_to "See all deals", hotel_deals_path %>
    </div>
  </div>
<% end %>
